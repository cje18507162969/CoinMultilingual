<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <www.linwg.org.lib.LCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bottomShadowHeight="@dimen/dp_10"
            app:leftBottomCornerRadius="@dimen/dp_10"
            app:leftShadowWidth="@dimen/dp_10"
            app:leftTopCornerRadius="@dimen/dp_10"
            app:rightBottomCornerRadius="@dimen/dp_10"
            app:rightShadowWidth="@dimen/dp_10"
            app:rightTopCornerRadius="@dimen/dp_10"
            app:shadowColor="@color/app_style_blue_min"
            app:shadowStartAlpha="80"
            app:topShadowHeight="@dimen/dp_10">

            <LinearLayout
                android:padding="@dimen/dp_10"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mTv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/Loading"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/dp_15" />

                    <LinearLayout
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:visibility="gone"
                            android:id="@+id/update_pass"
                            android:layout_centerInParent="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="@dimen/dp_75"
                            android:layout_height="@dimen/dp_25"
                            android:background="@drawable/anniu_1"
                            android:text="重置密码"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_12" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:alpha="0.2"
                    android:background="@color/color_black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="手机号码："
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/dp_13" />

                    <TextView
                        android:id="@+id/mTv_Trade_number"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingRight="@dimen/dp_10"
                        android:text="@string/Loading"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/dp_13" />

                    <ImageView
                        android:id="@+id/mImg_phone_team"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/mine_team_phone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="上次进货金额："
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/dp_13" />

                    <TextView
                        android:id="@+id/mTv_commodity_value"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/Loading"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/dp_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="上次进货时间："
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/dp_13" />

                    <TextView
                        android:id="@+id/mTv_Expected_to_obtain"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/Loading"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/dp_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="注册时间："
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/dp_13" />

                    <TextView
                        android:id="@+id/mTv_Thawing_date"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Loading"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/dp_13" />
                </LinearLayout>

                <View
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/app_default"/>

                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/mTv_state"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/Loading"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/dp_15" />

                    <TextView
                        android:id="@+id/investmentStatus"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/white"/>

                    <Button
                        android:id="@+id/mBtn_turnCbd"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_25"
                        android:background="@drawable/btn_turnthecoin"
                        android:text="@string/mbr_transfer_accounts_coin"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_12" />

                </RelativeLayout>


            </LinearLayout>

        </www.linwg.org.lib.LCardView>
    </LinearLayout>
</layout>