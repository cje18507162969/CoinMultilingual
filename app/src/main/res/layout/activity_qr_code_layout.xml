<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/promotioncode_bg"
        android:paddingTop="@dimen/dp_20"
        android:orientation="vertical">

        <include
            android:id="@+id/titleBar"
            layout="@layout/base_new_head_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/qr_code_mxl_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/qr_code_mxl_ll"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FF8B19"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/qr_code_mxl_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_16"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/qr_code_mxl_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MXL"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_16" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:background="@color/color_F5F5F5" />

                <LinearLayout
                    android:id="@+id/qr_code_tdq_ll"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/qr_code_tdq_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/dp_16"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/qr_code_tdq_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TDQ"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/dp_16" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/mTv_contentPic"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_30"
                android:text="扫一扫图中二维码将成为您推荐的会员"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_15" />

            <www.linwg.org.lib.LCardView
                android:layout_marginTop="@dimen/dp_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bottomShadowHeight="@dimen/dp_10"
                app:leftBottomCornerRadius="@dimen/dp_10"
                app:leftShadowWidth="@dimen/dp_10"
                app:leftTopCornerRadius="@dimen/dp_10"
                app:rightBottomCornerRadius="@dimen/dp_10"
                app:rightShadowWidth="@dimen/dp_10"
                app:rightTopCornerRadius="@dimen/dp_10"
                app:shadowColor="@color/app_style_blue_min"
                app:shadowStartAlpha="80"
                app:topShadowHeight="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_20">

                    <ImageView
                        android:id="@+id/qr_img"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pic_mine_myinvitationcode"/>

                    <teng.wang.comment.widget.CircleImageView
                        android:layout_marginTop="@dimen/dp_10"
                        android:id="@+id/mImg_qr_userPic"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center"
                        android:src="@drawable/haitaotao_zhanghao"
                        app:civ_border_color="@color/app_style_blue_min"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:id="@+id/mTv_qr_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="@string/Loading"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/dp_15" />
                    <TextView
                        android:id="@+id/mTv_qr_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_2"
                        android:text="@string/Loading"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/dp_15" />

                    <RelativeLayout
                        android:layout_marginTop="@dimen/dp_20"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/qr_content"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/dp_6"
                            android:layout_marginRight="@dimen/dp_6"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/sp_12"
                            android:text="扫描二维码  即可注册会员"/>

                        <View
                            android:layout_toLeftOf="@+id/qr_content"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:background="@color/color_999999"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"/>

                        <View
                            android:layout_toRightOf="@+id/qr_content"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:background="@color/color_999999"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/mTv_qr_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/Loading"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/dp_18"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/mImg_qr"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="@dimen/dp_200"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_20"
                        android:src="@mipmap/buyout_active" />
                </LinearLayout>
            </www.linwg.org.lib.LCardView>
        </LinearLayout>
    </LinearLayout>
</layout>