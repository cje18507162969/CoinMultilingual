<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_white_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/transaction_pp_hz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/transaction_transfer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="划转"
            android:textColor="@color/app_home_text"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:padding="@dimen/dp_10"
        android:id="@+id/transaction_pp_ddjl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/transaction_orderrecord" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="订单记录"
            android:textColor="@color/app_home_text"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:padding="@dimen/dp_10"
        android:id="@+id/transaction_pp_skfs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/transaction_paymentmethod" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="收款方式"
            android:textColor="@color/app_home_text"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:padding="@dimen/dp_10"
        android:visibility="gone"
        android:id="@+id/transaction_pp_fbgg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/transaction_placeanad" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="发布广告"
            android:textColor="@color/app_home_text"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:padding="@dimen/dp_10"
        android:visibility="gone"
        android:id="@+id/transaction_pp_wdgg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/transaction_myad" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="我的广告"
            android:textColor="@color/app_home_text"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>