<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:padding="@dimen/dp_15"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/assets_account_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_999999"
                android:text="@string/Loading"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/assets_account_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_home_text"
                    android:text="@string/Loading"/>
                <TextView
                    android:id="@+id/assets_account_price_cny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_9"
                    android:textColor="@color/color_999999"
                    android:text="@string/Loading"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:background="@color/app_default"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/assets_account_recycler"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</layout>