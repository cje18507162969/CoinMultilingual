<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/title_layout"
        android:gravity="bottom"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <LinearLayout
                android:id="@+id/img_Return"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/title_img"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/mine_banck"/>
                <teng.wang.comment.widget.CircleImageView
                    android:id="@+id/img_user_pic"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@mipmap/mine_pic" />
                <TextView
                    android:id="@+id/txt_Return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_6"
                    android:text="@string/permissions_cancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/mImg_logo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/logo"
                    android:layout_marginRight="@dimen/dp_5"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txt_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pickerview_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18"/>
            </LinearLayout>

            <TextView
                android:id="@+id/mTv_Flowing_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_75"
                android:gravity="right"
                android:paddingLeft="@dimen/dp_6"
                android:text="流水"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/mTv_Preservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="right"
                android:paddingLeft="@dimen/dp_6"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/mImg_Scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="right"
                android:paddingLeft="@dimen/dp_6"
                android:visibility="gone"
                android:src="@mipmap/scan"/>

        </RelativeLayout>

        <View
            android:id="@+id/title_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:visibility="gone"
            android:background="@color/line_color"/>

    </LinearLayout>

</layout>