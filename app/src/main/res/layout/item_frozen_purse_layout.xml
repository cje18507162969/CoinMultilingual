<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        android:padding="@dimen/dp_32"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/freeze_bg"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal">
            <View
                android:layout_width="@dimen/dp_3"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center"
                android:background="@color/color_ff7302"/>
            <TextView
                android:paddingLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="买入订单状态"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dp_15"/>
            <TextView
                android:id="@+id/mTv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/Loading"
                android:textColor="@color/color_fa2b2b"
                android:textSize="@dimen/dp_15"/>
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="交易号"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp_13"/>
            <TextView
                android:id="@+id/mTv_Trade_number"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Loading"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp_13"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="商品价值"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp_13"/>
            <TextView
                android:id="@+id/mTv_commodity_value"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Loading"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp_13"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="预期获得"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp_13"/>
            <TextView
                android:id="@+id/mTv_Expected_to_obtain"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Loading"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp_13"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="解冻日期"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/dp_13"/>
            <TextView
                android:id="@+id/mTv_Thawing_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易号"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/dp_13"/>
        </LinearLayout>
    </LinearLayout>
</layout>