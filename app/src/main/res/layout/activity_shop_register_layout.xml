<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:paddingBottom="@dimen/dp_100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingBottom="@dimen/dp_30"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_65"
                        android:layout_height="@dimen/dp_60"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_60"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/app_name"
                        android:textStyle="bold"
                        android:textColor="@color/app_style_blue_dark_text"
                        android:textSize="@dimen/sp_20" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_40"
                        android:layout_marginRight="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_30"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/registered_user" />

                                <EditText
                                    android:id="@+id/mEdt_phone"
                                    android:layout_width="@dimen/dp_0"
                                    android:layout_height="@dimen/dp_56"
                                    android:layout_marginLeft="@dimen/dp_6"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:hint="@string/mine_phone"
                                    android:inputType="phone|number"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/color_999999"
                                    android:textSize="@dimen/sp_16" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:background="@color/line_color" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/registered_code" />

                                <EditText
                                    android:id="@+id/mEdt_code"
                                    android:layout_width="@dimen/dp_0"
                                    android:layout_height="@dimen/dp_56"
                                    android:layout_marginLeft="@dimen/dp_6"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:hint="@string/register_edit_verify"
                                    android:inputType="text"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/color_999999"
                                    android:textSize="@dimen/sp_16" />

                                <teng.wang.comment.utils.TimerButton
                                    android:id="@+id/mTimeBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/transparent"
                                    android:layout_marginRight="@dimen/dp_4"
                                    android:gravity="center"
                                    android:padding="@dimen/dp_4"
                                    android:text="@string/timer_button_text"
                                    android:textColor="@color/app_style_blue"
                                    android:textSize="@dimen/sp_16"
                                    app:afterText="@string/tv_resend"
                                    app:ms="60000" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:background="@color/line_color" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/registered_password" />

                                <EditText
                                    android:id="@+id/mEdt_password"
                                    android:layout_width="@dimen/dp_0"
                                    android:layout_height="@dimen/dp_56"
                                    android:layout_marginLeft="@dimen/dp_6"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:hint="@string/register_edit_pass"
                                    android:inputType="textPassword"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/color_999999"
                                    android:textSize="@dimen/sp_16" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:background="@color/line_color" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/registered_confirmpwd" />

                                <EditText
                                    android:id="@+id/mEdt_two_password"
                                    android:layout_width="@dimen/dp_0"
                                    android:layout_height="@dimen/dp_56"
                                    android:layout_marginLeft="@dimen/dp_6"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:hint="@string/register_edit_pass_confirm"
                                    android:inputType="textPassword"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/color_999999"
                                    android:textSize="@dimen/sp_16" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:background="@color/line_color" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_share_code" />

                                <EditText
                                    android:id="@+id/share_code"
                                    android:layout_width="@dimen/dp_0"
                                    android:layout_height="@dimen/dp_56"
                                    android:layout_marginLeft="@dimen/dp_6"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:hint="@string/register_edit_invitation_code"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/color_999999"
                                    android:textSize="@dimen/sp_16" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:background="@color/line_color" />
                        </LinearLayout>


                    </LinearLayout>

                    <Button
                        android:id="@+id/mBtn_register"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginLeft="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_40"
                        android:layout_marginRight="@dimen/dp_40"
                        android:alpha="0.5"
                        android:background="@drawable/shape_blue_button_layout"
                        android:enabled="false"
                        android:onClick="onClick"
                        android:text="@string/register_tv"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/mBtn_register_login"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dp_35"
                        android:layout_marginLeft="@dimen/dp_40"
                        android:layout_marginRight="@dimen/dp_40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_16"
                            android:text="@string/register_text_user"/>
                        <TextView
                            android:layout_marginLeft="@dimen/dp_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/app_style_blue"
                            android:text="@string/register_text_user_login"/>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/mBtn_register_close"
                    android:layout_margin="@dimen/dp_17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:text="@string/cancel"/>

            </RelativeLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <include
                layout="@layout/base_bottom_layout" />
        </LinearLayout>
    </RelativeLayout>
</layout>