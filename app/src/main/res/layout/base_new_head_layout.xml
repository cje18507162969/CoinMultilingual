<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_style_blue_min"
        android:gravity="bottom"
        android:id="@+id/title_layout"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <LinearLayout
                android:id="@+id/Lin_BaseTile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_Return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_left"/>
                <TextView
                    android:id="@+id/txt_Return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_6"
                    android:text="@string/permissions_cancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_15"
                    android:visibility="gone"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/pickerview_title"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"/>
            <TextView
                android:id="@+id/mTv_Flowing_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_75"
                android:gravity="right"
                android:paddingLeft="@dimen/dp_6"
                android:text="流水"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_15"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/mTv_Preservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="right"
                android:paddingLeft="@dimen/dp_6"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_15"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/mImg_Scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="right"
                android:paddingLeft="@dimen/dp_6"
                android:visibility="gone"
                android:src="@mipmap/scan"/>
        </RelativeLayout>

    </LinearLayout>

</layout>