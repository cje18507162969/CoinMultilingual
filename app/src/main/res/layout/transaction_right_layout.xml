<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/transaction_right_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/dp_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transaction_navi_right_money_text"
                android:textColor="@color/app_home_text"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/transaction_right_screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_22"
                android:background="@drawable/shape_gray_line_layout"
                android:hint="@string/transaction_navi_right_edit_hide_text"
                android:inputType="numberDecimal"
                android:padding="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_6"
                android:textColor="@color/app_home_text"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_22"
                android:text="@string/transaction_navi_right_pay_mode_text"
                android:textColor="@color/app_home_text"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14">

                <TextView
                    android:id="@+id/transaction_right_wx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/shape_gray_button_layout"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="@string/transaction_navi_right_pay_weix"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/transaction_right_alipay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/shape_gray_button_layout"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="@string/transaction_navi_right_pay_alipay"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/transaction_right_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/shape_gray_button_layout"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="@string/transaction_navi_right_pay_bank"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_above="@+id/transaction_right_button_layout"
            android:background="@color/app_default" />

        <LinearLayout
            android:id="@+id/transaction_right_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/transaction_right_button_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:padding="@dimen/dp_16"
                android:text="@string/transaction_navi_right_pay_reset"
                android:textColor="@color/app_home_text"
                android:textSize="@dimen/dp_18" />

            <TextView
                android:id="@+id/transaction_right_button_screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/app_style_blue"
                android:gravity="center"
                android:padding="@dimen/dp_16"
                android:text="@string/transaction_navi_right_pay_select"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_18" />

        </LinearLayout>
    </RelativeLayout>
</layout>