<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_default"
        android:orientation="vertical">

            <include
                android:id="@+id/titleBar"
                layout="@layout/base_new_head_layout" />

        <www.linwg.org.lib.LCardView
            android:id="@+id/timer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bottomShadowHeight="@dimen/dp_10"
            app:leftBottomCornerRadius="@dimen/dp_10"
            app:leftShadowWidth="@dimen/dp_10"
            app:leftTopCornerRadius="@dimen/dp_10"
            app:rightBottomCornerRadius="@dimen/dp_10"
            app:rightShadowWidth="@dimen/dp_10"
            app:rightTopCornerRadius="@dimen/dp_10"
            app:shadowColor="@color/app_style_blue_min"
            app:shadowStartAlpha="80"
            app:topShadowHeight="@dimen/dp_10">

            <LinearLayout
                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/mTv_base_nu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="直推奖金"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/mTv_Number_of_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="0"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <View
                    android:background="@color/color_999999"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_20"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="提现币"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/mTv_Coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="0个"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <View
                    android:background="@color/color_999999"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_20"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="团队奖金"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/mTv_base_team"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="0"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <View
                    android:background="@color/color_999999"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_20"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总收入(个)"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/mTv_queryTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="0个"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>
            </LinearLayout>
        </www.linwg.org.lib.LCardView>

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mTv_A_generation_of_detail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_sky_blue_min_layout"
                android:gravity="center"
                android:text="直推奖金明细"
                android:textColor="@color/app_style_blue_text"
                android:textSize="@dimen/dp_18" />

            <TextView
                android:id="@+id/mTv_Two_generation_of_detail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="团队奖金明细"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/dp_18" />
        </LinearLayout>

        <com.jude.easyrecyclerview.EasyRecyclerView
            android:id="@+id/mEasyRecyclerView_bonus"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"/>

    </LinearLayout>
</layout>