<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_product_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <www.linwg.org.lib.LCardView
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:topShadowHeight="@dimen/dp_6"
            app:bottomShadowHeight="@dimen/dp_6"
            app:leftShadowWidth="@dimen/dp_6"
            app:rightShadowWidth="@dimen/dp_6"
            app:leftBottomCornerRadius="@dimen/dp_6"
            app:leftTopCornerRadius="@dimen/dp_6"
            app:rightBottomCornerRadius="@dimen/dp_6"
            app:rightTopCornerRadius="@dimen/dp_6"
            app:shadowColor="@color/app_style_blue_min"
            app:shadowStartAlpha="80">

            <!--<LinearLayout-->
                <!--android:background="@drawable/shape_card_bg_layout"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="vertical">-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <ImageView
                    android:id="@+id/item_product_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_img_transaction_layout"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/hot_today" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_6"
                    android:layout_marginBottom="@dimen/dp_6">

                    <TextView
                        android:id="@+id/item_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@+id/item_product_price"
                        android:text="@string/Loading"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <LinearLayout
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/item_product_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Loading"
                            android:textColor="@color/color_fa2b2b"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/item_product_market_price"
                            android:layout_marginLeft="@dimen/dp_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Loading"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </www.linwg.org.lib.LCardView>
    </LinearLayout>
</layout>