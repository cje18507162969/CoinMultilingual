<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/item_coin_layout"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_10"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/top_name1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Loading"
                android:textColor="@color/app_home_text"
                android:textStyle="bold"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/top_price1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/Loading"
                android:textColor="@drawable/selector_main_tab_text_color"
                android:textStyle="bold"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/top_rate1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/Loading"
                android:textColor="@drawable/selector_main_tab_text_color"
                android:textStyle="bold"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/top_price_cny1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/Loading"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>
    </LinearLayout>
</layout>