<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <www.linwg.org.lib.LCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bottomShadowHeight="@dimen/dp_10"
            app:leftBottomCornerRadius="@dimen/dp_10"
            app:leftShadowWidth="@dimen/dp_10"
            app:leftTopCornerRadius="@dimen/dp_10"
            app:rightBottomCornerRadius="@dimen/dp_10"
            app:rightShadowWidth="@dimen/dp_10"
            app:rightTopCornerRadius="@dimen/dp_10"
            app:shadowColor="@color/app_style_blue_min"
            app:shadowStartAlpha="80"
            app:topShadowHeight="@dimen/dp_10">

            <LinearLayout
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mTv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/mbr_tz"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/dp_13" />

                        <TextView
                            android:id="@+id/mTv_Buy_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/Loading"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/dp_18" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/mTv_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/Loading"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/dp_13"
                        android:visibility="gone" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginTop="@dimen/dp_4"
                        android:id="@+id/mTv_investmentOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="订单编号："
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/dp_13" />

                    <TextView
                        android:id="@+id/mTv_Trade_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/Loading"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/dp_13"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginTop="@dimen/dp_4"
                        android:id="@+id/mTv_createTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="进货时间："
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/dp_13" />

                    <TextView
                        android:id="@+id/mTv_commodity_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/Loading"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/dp_13"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginTop="@dimen/dp_4"
                        android:id="@+id/mTv_sell_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="卖出时间："
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/dp_13" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/Loading"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/dp_13"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginTop="@dimen/dp_4"
                        android:id="@+id/estimate_profit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="卖出时间："
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/dp_13" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/Loading"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/dp_13"
                        android:visibility="invisible" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:background="@color/app_default" />

                <LinearLayout
                    android:paddingTop="@dimen/dp_4"
                    android:paddingBottom="@dimen/dp_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mTv_investmentStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="@string/Loading"
                        android:textColor="@color/color_ff7916"
                        android:textSize="@dimen/dp_13" />

                    <TextView
                        android:id="@+id/mTv_Thawing_date"
                        android:layout_width="@dimen/dp_75"
                        android:layout_height="@dimen/dp_28"
                        android:layout_gravity="center"
                        android:background="@mipmap/button_bg"
                        android:gravity="center"
                        android:text="订单详情"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_12"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </www.linwg.org.lib.LCardView>

        <ImageView
            android:id="@+id/mImg_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
            android:src="@mipmap/buy_done"
            android:visibility="visible" />

    </RelativeLayout>
</layout>