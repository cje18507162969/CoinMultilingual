<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/mLin_news_details"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/view_state_pressed"
        android:orientation="vertical"
    android:padding="@dimen/dp_15">
        <TextView
            android:id="@+id/mTv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/color_333333"
            android:text="@string/Loading"/>
        <ImageView
            android:id="@+id/mImg_news_pic"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_167"
            android:src="@mipmap/index_banner"
        />
        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="@dimen/dp_12"
                android:textColor="@color/color_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来源："/>
            <TextView
                android:id="@+id/mTv_source"
                android:textSize="@dimen/dp_12"
                android:textColor="@color/color_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Loading"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:textSize="@dimen/dp_12"
                android:textColor="@color/color_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作者："/>
            <TextView
                android:id="@+id/mTv_author"
                android:textSize="@dimen/dp_12"
                android:textColor="@color/color_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Loading"/>
            <TextView
                android:id="@+id/mTv_time"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="@dimen/dp_12"
                android:textColor="@color/color_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Loading"/>
        </LinearLayout>
    </LinearLayout>
</layout>